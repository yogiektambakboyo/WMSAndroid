<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaksi Retur"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="20sp"
            android:textIsSelectable="false" android:textColor="@android:color/black" android:textStyle="bold"
            android:layout_marginBottom="5dip" android:background="@android:color/darker_gray"
            android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="40dip" android:background="#CEEBFB">
        <TextView
                android:layout_width="35dip"
                android:layout_height="wrap_content"
                android:text="Rak"
                android:id="@+id/textView1" android:layout_gravity="left|center_vertical"
                android:textColor="@android:color/black" android:layout_marginLeft="7dip" android:textStyle="bold"
                android:textSize="16sp"/>
        <EditText android:layout_width="120dip" android:layout_height="wrap_content"
                  android:id="@+id/OPTRR1_Rack" android:layout_gravity="center" android:hint="Rak/Staging Area"
                  android:textColor="@android:color/black" android:inputType="number" android:singleLine="true"
                  android:maxLength="8"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rak Salah"
                android:id="@+id/OPTRR1_RackName" android:layout_gravity="center" android:textColor="@android:color/black"
                android:textStyle="bold" android:textSize="16sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/OPTRR1_RackDestMsg" android:layout_gravity="center" android:adjustViewBounds="false"
                android:src="@drawable/wh_error"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Nota Retur :"
            android:id="@+id/textView2" android:layout_gravity="center" android:layout_marginTop="5dip"
            android:textStyle="bold" android:textSize="18dip" android:textColor="@android:color/black"/>
    <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>