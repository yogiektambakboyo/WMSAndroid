<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Outstanding Storing"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="20sp"
            android:textIsSelectable="false" android:textColor="@android:color/black" android:textStyle="bold"
            android:layout_marginBottom="5dip" android:background="@android:color/darker_gray"
            android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="48dip" android:background="@android:color/white">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bin :"
                android:id="@+id/textView" android:layout_gravity="center" android:textSize="18sp"
                android:textIsSelectable="false" android:textColor="@android:color/black" android:textStyle="bold"
                android:layout_marginBottom="5dip" android:layout_marginLeft="10dip"/>
        <EditText
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:id="@+id/OPTMBPB2_InputBin" android:layout_gravity="center" android:layout_marginLeft="5dip"
                android:hint="Masukkan Palet" android:maxLength="7" android:singleLine="true"
                android:inputType="number"/>
    </LinearLayout>

    <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>