<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#bfbfbf"
        >


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@drawable/wh_taskbg" android:paddingTop="2dip"
            android:paddingBottom="2dip" android:layout_marginTop="2dip" android:layout_marginBottom="2dip">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginLeft="7dip">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kd. Nota :"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:layout_marginLeft="5dip"/>
                <TextView
                        android:id="@+id/OPTRR1_ERPCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:layout_marginLeft="5dip" android:text="ERP Code" android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginLeft="7dip">
                <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:text="Tanggal     :"
                        android:id="@+id/TextView" android:layout_gravity="left|center_vertical" android:textSize="15sp"
                        android:textColor="#ffffff" android:layout_marginLeft="5dip"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl Transaksi"
                        android:layout_marginLeft="5dip"
                        android:id="@+id/OPTRR1_TransactionDate" android:layout_gravity="left|center_vertical" android:textSize="15sp"
                        android:textColor="#ffffff" android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl Transaksi"
                        android:layout_marginLeft="5dip"
                        android:id="@+id/OPTRR1_TransactionCode" android:layout_gravity="left|center_vertical" android:textSize="15sp"
                        android:textColor="#ffffff" android:textStyle="bold" android:visibility="gone"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl Transaksi"
                        android:layout_marginLeft="5dip"
                        android:id="@+id/OPTRR1_Assigned" android:layout_gravity="left|center_vertical" android:textSize="15sp"
                        android:textColor="#ffffff" android:textStyle="bold" android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>